# Application Configuration
APP_NAME="Credit System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Security
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration
CACHE_STORE=file
CACHE_PREFIX=

# Queue Configuration
QUEUE_CONNECTION=sync

# Mail Configuration (for future use)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@creditsystem.local"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting (for future use)
BROADCAST_CONNECTION=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Filesystem Configuration
FILESYSTEM_DISK=local

# Credit System Specific Configuration
CREDIT_MIN_AGE=18
CREDIT_MAX_AGE=60
CREDIT_MIN_SCORE=500
CREDIT_MIN_INCOME=1000
CREDIT_ALLOWED_REGIONS="PR,BR,OS"
CREDIT_OSTRAVA_RATE_INCREASE=5.0

# Application Features
CREDIT_PRAGUE_RANDOM_REJECTION=true
CREDIT_NOTIFICATIONS_ENABLED=true

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Performance
OPTIMIZE_AUTOLOADER=false
CACHE_CONFIG=false
CACHE_ROUTES=false
CACHE_VIEWS=false

# Security Headers (for production)
SECURE_HEADERS=false
